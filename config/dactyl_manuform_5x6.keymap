#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

&sl {
    release-after-ms = <5000>;
};


&kscan0 {
debounce-press-ms = <30>;
debounce-release-ms = <30>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp ESC   &kp N1 &kp N2 &kp N3 &kp N4 &kp N5              &kp N6 &kp N7 &kp N8    &kp N9  &kp N0   &kp BSPC
                &kp TAB   &kp Q  &kp W  &kp E  &kp R  &kp T               &kp Y  &kp U  &kp I     &kp O   &kp P    &kp BSLH
                &kp GRAVE &kp A  &kp S  &kp D  &kp F  &kp G               &kp H  &kp J  &kp K     &kp L   &kp SEMI &kp SQT
                &mo 1     &kp Z  &kp X  &kp C  &kp V  &kp B               &kp N  &kp M  &kp COMMA &kp DOT &kp FSLH &mo 2
                                 &kp MINUS &kp LBKT                                     &kp RBKT  &kp EQUAL 
                                            &kp LCTRL &kp SPACE           &kp RET  &kp RCTRL
                                            &kp LSHFT &kp LALT            &kp RALT &kp RSHFT
                                            &mo 2     &kp LGUI            &kp RGUI &mo 1
            >;
        };

        lower_layer {
            bindings = <
                &kp F12 &kp F1 &kp F2 &kp F3 &kp F4 &kp F5                &kp F6 &kp F7   &kp F8   &kp F9 &kp F10   &kp F11
                &trans  &trans &trans &trans &trans &trans                &trans &trans   &trans   &trans &trans    &trans
                &trans  &trans &trans &trans &trans &trans                &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans 
                &trans  &trans &trans &trans &trans &trans                &trans &trans   &trans   &trans &trans    &mo 3
                               &trans &trans                                              &trans   &trans
                                             &trans &trans                &trans &trans
                                             &trans &trans                &trans &trans
                                             &mo 3 &trans                 &trans &trans
            >;
        };

        raise_layer {
            bindings = <
                &trans  &trans &trans &trans   &trans &trans              &trans &trans &trans &trans &trans &kp DEL
                &trans  &trans &kp MINUS &kp LBRC  &kp RBRC &trans        &trans &kp KP_N7 &kp KP_N8 &kp KP_N9 &trans &trans
                &trans  &trans &kp EQUAL &kp LPAR  &kp RPAR &trans        &trans &kp KP_N4 &kp KP_N5 &kp KP_N6 &trans &trans
                &mo 3   &trans &trans &kp LBKT &kp RBKT &trans            &kp AMPS &kp KP_N1 &kp KP_N2 &kp KP_N3 &trans &trans 
                               &trans &trans                                             &kp KP_DOT &kp KP_N0
                                             &trans  &trans               &trans &trans
                                             &trans  &trans               &trans &trans
                                             &trans  &trans               &trans &mo 3
            >;
        };

        adjust_layer {
            bindings = <
                &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4             &none       &none      &none &none &none &none
                &none &none        &out OUT_USB &none        &sys_reset   &none                    &none       &sys_reset &none &none &none &none
                &none &none        &out OUT_BLE &none        &none        &none                    &none       &none      &none &none &none &none
                &none &none        &bt BT_CLR   &none        &none        &bootloader              &bootloader &none      &none &none &none &none
                                   &none        &none                                                                     &none &none
                                                             &none        &none                    &none       &none
                                                             &none        &none                    &none       &none
                                                             &none        &none                    &none       &none
            >;
        };
    };
};
